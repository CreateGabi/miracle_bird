<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

	<!-- Camel Case, Snake Case 자동 매핑 설정 -->
	<settings>
		<setting name="mapUnderscoreToCamelCase" value="true"/>
	</settings>

	<typeAliases>
		<typeAlias type="com.multi.miraclebird.user.UserVO" alias="userVO"/>
		<typeAlias type="com.multi.miraclebird.user.ProfileVO" alias="profileVO"/>
	</typeAliases>
	
	<mappers>
		<mapper resource="mapper/userMapper.xml" />
   	</mappers>

</configuration>
